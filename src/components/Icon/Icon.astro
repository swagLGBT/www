---
import { Icon as IconInner } from "astro-icon/components";
import type { ComponentProps } from "astro/types";

import type { IconName } from "virtual:pixel-art-icons";

interface Props
  extends Omit<ComponentProps<typeof IconInner>, "name" | "width" | "height"> {
  name: IconName;
  size?: number;
}

const { size = 1, ...props } = Astro.props;
---

<IconInner size={`${size * 24}px`} {...props} />
