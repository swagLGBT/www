---
import Flag from "../components/Flag.astro";
import Icon from "../components/Icon.astro";
import Layout from "../layouts/Base.astro";
---

<style>
  * {
    font-family: "VT323", monospace;
  }

  h1 {
    margin-bottom: 1rem;
    text-align: center;
    font-size: 5rem;
    margin-top: 0;
  }

  main {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  @media only screen and (max-width: 768px) {
    ul {
      flex-direction: column;
    }

    a {
      flex-direction: row;
    }
  }

  @media only screen and (min-width: 768px) {
    a {
      flex-direction: column;
    }
  }

  ul {
    display: flex;
    align-items: center;
    justify-content: center;

    list-style-type: none;
    padding: 0;
    margin: 0;

    margin-top: 1rem;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 4rem;
    color: inherit;
    text-decoration: none;

    padding-right: 2rem;
    padding-left: 2rem;
  }

  a:hover,
  a:focus {
    color: #06b741;
  }
</style>

<Layout>
  <div>
    <header>
      <h1>welcome to swagLGBT</h1>
    </header>
    <main>
      <Flag flag="progressPride" animated scale={20} />
      <ul>
        <li>
          <a href="https://github.com/caass">
            <Icon name="solid-github" size={4} />
            github
          </a>
        </li>
        <li>
          <a href="https://linkedin.com/in/caass">
            <Icon name="solid-briefcase" size={4} />
            linkedin
          </a>
        </li>
        <li>
          <a href="mailto:cass@swag.lgbt">
            <Icon name="solid-mail" size={4} />
            contact
          </a>
        </li>
      </ul>
    </main>
  </div>
</Layout>
